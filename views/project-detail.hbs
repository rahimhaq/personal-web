<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Detail</title>
    <link rel="stylesheet" href="/asset/css/project-detail.css" />
    <link rel="stylesheet" href="/asset/css/nav.css" />
  </head>
  <body>
    <nav>
      <ul style="flex-wrap: nowrap">
        <li>
          <img src="/asset/img/dumbways.png" style="width: 70px" />
        </li>
        <li>
          <a href="/" class="nav-links"> Home </a>
        </li>
        <li style="font-weight: 700">
          <a
            href="/project"
            style="justify-content: space-between; white-space: nowrap"
            class="nav-links"
          >
            My Project
          </a>
        </li>
        <li>
          <a
            href="/testimonial"
            style="justify-content: space-between; white-space: nowrap"
            class="nav-links"
          >
            Testimonials
          </a>
        </li>
        <li style="display: flex; justify-content: flex-end; width: 80%">
          <a href="/contact" class="btn-contact nav-links">Contact Me</a>
          <div class="hamburger-menu" onclick="toggleMenu()">â˜°</div>
        </li>
      </ul>
    </nav>

    <div id="hamburger-container" class="hamburger-container hide">
      <h1 class="hamburger-container-item">
        <a style="color: #232946; text-decoration: none" href="/">
          Home
        </a>
      </h1>
      <h1 class="hamburger-container-item hamburger-active">
        <a style="color: white; text-decoration: none" href="/project">
          My Project
        </a>
      </h1>
      <h1 class="hamburger-container-item">
        <a style="color: #232946; text-decoration: none" href="/contact">
          Contact Me
        </a>
      </h1>
      <h1 class="hamburger-container-item">
        <a style="color: #232946; text-decoration: none" href="/testimonial">
          Testimonials
        </a>
      </h1>
    </div>
    <main>
        <section class="project-detail">
            <h1>{{project.name}}</h1>
            <div class="project-content">
                <img src="{{project.image}}" alt="{{project.title}}">
                <div class="project-info">
                    <h2>Duration</h2>
                    <p>{{project.start_date}} - {{project.end_date}}</p>
                    <p>{{project.duration}}</p>
                    
                    <h2>Technologies</h2>
                    <div class="technologies">
                        {{#each project.technologies}}
                            <span>{{this}}</span>
                        {{/each}}
                    </div>
                </div>
            </div>
            <p>{{project.description}}</p>
        </section>
    </main>

    {{!-- <script src="asset/js/project-detail.js"></script> --}}
    <script src="asset/js/nav.js"></script>
  </body>
</html>