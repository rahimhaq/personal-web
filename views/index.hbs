      <h1 style="text-align: center;">MY PROJECT</h1>
      <div class="container">
        <div class="project-cards" id="projectCardsContainer">
          {{#each projects}}
            <div class="project-card">
              <!-- Path untuk gambar proyek -->
              <img
                src="/views/uploads/{{this.image}}"
                alt="{{this.title}}"
                style="width: 100%; height: auto;"
              />
              <h2>{{this.name}}</h2>
              <p>Start Date: {{this.start_date}}</p>
              <p>End Date: {{this.end_date}}</p>
              <p class="project-description">{{short_description}}</p>
              <p>Technologies:
                {{#each this.technologies}}<span>{{this}}</span> {{/each}}
              </p>
              <!-- Tombol Edit dan Delete -->
              <button
                onclick="window.location.href='/edit-project/{{this.id}}'"
                class="edit-btn"
              >Edit</button>
              <form
                action="/delete-project/{{this.id}}"
                method="POST"
                style="display:inline;"
              >
                <button type="submit" class="delete-btn">Delete</button>
              </form>
              <a href="/project-detail/{{this.id}}" class="button-detail">
                <i class="button-detail-icon fas fa-arrow-right"></i>

              </a>
            </div>
          {{/each}}
        </div>
      </div>

    </main>

